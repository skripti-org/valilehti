---
import { SITE } from '../config'
//import SearchBtn from './SearchBtn.svelte'
---

<header class="header">
  <div class="header__logo">
    <a href="/" class="avatar">
      <img class="header__logo-img" src="/assets/logo.svg" alt="Astro logo" />
    </a>
  </div>
  <div class="header__meta flex-1">
    <h3 class="header__title dark:text-primarySecondaryDark">
      <a href="">{SITE.name}</a>
    </h3>
    <div class="header__meta-more flex">
      <p class="header__desc">
        {SITE.description}
      </p>
      <nav class="header__nav flex">
        <ul class="header__ref-list">
          <!--
          <li>
            <SearchBtn client:visible />
          </li>
        -->
          <li>
            <a href={SITE.githubUrl} title={`${SITE.name}'s Github URL'`}> </a>
          </li>
          <li>
            <a href="/rss.xml" title="RSS"> </a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</header>
